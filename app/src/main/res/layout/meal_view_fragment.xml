<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/meal_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="33sp"
        android:padding="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        app:fontFamily="@font/arvo_bold"
        android:text="Meal Name" />

    <TextView
        android:id="@+id/meal_date_text_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="24sp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        app:fontFamily="sans-serif-medium"
        android:text="Meal Date" />

    <TextView
        android:id="@+id/meal_recipe_text_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="24sp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        app:fontFamily="sans-serif-medium"
        android:text="Meal Name" />

    <TextView
        android:id="@+id/meal_servings_text_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="24sp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        app:fontFamily="sans-serif-medium"
        android:text="Meal Name" />


    <ListView
        android:id="@+id/meal_view_fragment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="30dp"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:layout_weight="1">

    </ListView>

</LinearLayout>