<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="Meal Date" />

        <Button
            android:id="@+id/date_button"
            style="?android:spinnerStyle"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2022-01-01"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipe_text_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="Recipe" />

        <Spinner
            android:id="@+id/recipe_spinner"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ingredient_text_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="" />

        <Spinner
            android:id="@+id/meal_ingredient_spinner"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/add_meal_ingredient_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#00FF00"
            android:textColor="#FFFFFF"
            android:text="+" />
    </LinearLayout>

    <ListView
        android:id="@+id/meal_fragment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_weight="1">

    </ListView>

    <Button
        android:id="@+id/meal_ingredient_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Ingredient" />


</LinearLayout>