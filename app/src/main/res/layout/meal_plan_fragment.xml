<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/meal_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:ems="10"
            android:hint="Meal Name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="Meal Date" />

        <Button
            android:id="@+id/date_button"
            style="?android:spinnerStyle"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2022-01-01"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipe_text_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="Recipe" />

        <Spinner
            android:id="@+id/recipe_spinner"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textSize="32dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/fragment_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Servings:" />

        <Button
            android:id="@+id/negative_button"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:text="-" />

        <TextView
            android:id="@+id/scaling_servings"
            android:minWidth="1dp"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="x1" />

        <Button
            android:id="@+id/positive_button"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_width="32dp"
            android:layout_height="48dp"
            app:backgroundTint= "@color/Green"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:text="+" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ingredient_text_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:text="" />

        <Spinner
            android:id="@+id/meal_ingredient_spinner"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/add_meal_ingredient_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:backgroundTint= "@color/Green"
            android:textColor="#FFFFFF"
            android:text="+" />
    </LinearLayout>

    <ListView
        android:id="@+id/meal_fragment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="1">

    </ListView>

    <Button
        android:id="@+id/meal_ingredient_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rm_ing" />


</LinearLayout>