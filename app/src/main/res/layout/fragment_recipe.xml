<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <EditText
        android:id="@+id/recipe_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.5"
        android:hint="Recipe Title"
        android:inputType="textPersonName"
        android:text="aaron"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/textView"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Comments:"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/comments_editText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Comments:"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/locTextView"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Category:"
            android:textSize="15dp" />

        <!--Citation for RadioButton:
                URL: https://www.geeksforgeeks.org/android-how-to-add-radio-buttons-in-an-android-application/
                Author: GeeksforGeeks
                Title: Android | How to add Radio Buttons in an Android Application?
                Published: July 21, 2022
                Date Retrieved: September 25, 2022
                License: CCBY-SA -->


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/american_op"
                    android:layout_width="fill_parent"
                    android:layout_height="28dp"
                    android:text="American"></RadioButton>

                <RadioButton
                    android:id="@+id/italian_op"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="Italian"></RadioButton>

                <RadioButton
                    android:id="@+id/mexican_op"
                    android:layout_width="fill_parent"
                    android:layout_height="28dp"
                    android:text="Mexican"></RadioButton>

                <!--<EditText
                    android:id="@+id/comment_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:hint="Comments"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:text="aaron" />-->
            </RadioGroup>
        </LinearLayout>


        <!--<EditText
            android:id="@+id/cat_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="Category"
            android:inputType="textPersonName"
            android:text="aaron"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/serving_sizeTextView"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Serving Size:"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/serving_size_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Serving Size"
            android:inputType="numberDecimal"
            android:text="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/prep_timeTextView"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Prep Time (min):"
            android:textSize="15dp" />


        <EditText
            android:id="@+id/prep_time_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Prep Time in Minutes"
            android:layout_weight="1"
            android:inputType="number"
            android:text="60"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/DateTextView"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Ingredients:"
            android:textSize="15dp" />

        <ListView
            android:id="@+id/ing_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>



    </LinearLayout>

</LinearLayout>
</LinearLayout>